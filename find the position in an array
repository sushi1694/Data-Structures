#include<stdio.h>
#define MAX_SIZE 100
int main()
{
int arr[MAX_SIZE];
int size,i,tosearch,found;
printf("enter size of array:");
scanf("%d",&size);
printf("enter elements in array");
for(i=0;i<size;i++)
{
	scanf("%d",&arr[i]);
	}	
	printf("enter element to search");
	scanf("%d",&tosearch);
	found = 0;
	for(i=0;i<size;i++)
	{
		if(arr[i] == tosearch)
		{
			found = 1;
			break;
		}
	}
	if(found == 1)
	{
		printf("%d is found at position %d", tosearch, i+1);
	}
	else
	{
		printf("%d is not founf in the array",tosearch);
	}
	return 0;
}
